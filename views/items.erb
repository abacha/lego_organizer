<table class="table table-striped table-bordered small" data-sortable="true" data-toggle="table" data-filter-control="true">
  <thead>
    <tr>
      <th scope="col" data-sortable="true" data-field="name" data-filter-control="input" class="col-md-2">Name</th>
      <th scope="col" data-sortable="true" data-field="boid" data-filter-control="input" class="col-md-1">BOID</th>
      <th scope="col" data-sortable="true" data-field="qty" data-filter-control="input" class="col-md-1">#</th>
      <th scope="col" data-sortable="true" data-field="color" data-filter-control="select" class="col-md-1">Color</th>
      <th scope="col" data-sortable="true" data-field="type" data-filter-control="select">Type</th>
      <th scope="col" data-sortable="true" data-field="category" data-filter-control="input">Category</th>
      <th scope="col" data-sortable="true" data-field="wishlists" data-filter-control="input">Wishlists</th>
      <th scope="col" data-field="picture" class="col-md-1">Picture</th>
      <th scope="col" class="col-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="small"><%= item.name %></td>
        <td><%= item.boid %></td>
        <td class="small"><%= item.qty %></td>
        <td class="small"><%= item.color %></td>
        <td class="small"><%= item.type %></td>
        <td class="small"><%= item.category %></td>
        <td class="small">
          <% wishlist_manager.with_item(item).map do |wishlist|  %>
            <%= wishlist.name %><br />
          <% end %>
        </td>
        <td><img src="<%= item.image %>" /></td>
        <td>
          <a target="_blank"href="/items/<%= item.boid %>">View</a>
          <a target="_blank"href="<%= item.url %>">BrickOwl</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</div>
