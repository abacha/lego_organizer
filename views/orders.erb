<table class="table table-striped table-bordered" data-sortable="true" data-toggle="table">
  <thead>
    <tr>
      <th scope="col" data-sortable="true" data-field="name" class="col-md-2">Id</th>
      <th scope="col" data-sortable="true" data-field="items" class="col-md-2">Date</th>
      <th scope="col" data-sortable="true" data-field="colors" class="col-md-2">Status</th>
      <th scope="col" class="col-md-1"></th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.date %></td>
      <td><%= order.status %></td>
      <td>
        <a class="icon-link" href="/orders/<%= order.id %>">View</a>
        <a class="icon-link" target="_blank" href="<%= order.url %>">BrickOwl</a>
      </td>
    </tr>
  <% end %>
</div>
