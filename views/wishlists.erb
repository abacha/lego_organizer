<table class="table table-striped table-bordered" data-sortable="true" data-toggle="table">
  <thead>
    <tr>
      <th scope='col' class="col-md-2">Picture</th>
      <th scope='col' data-sortable="true" data-field="name" class="col-md-2">Name</th>
      <th scope='col' data-sortable="true" data-field="items" class="col-md-1">Items</th>
      <th scope='col' data-sortable="true" data-field="colors" class="col-md-2">Colors</th>
      <th scope='col' data-sortable="true" data-field="type" class="col-md-2">Types</th>
      <th scope='col' class="col-md-1"></th>
    </tr>
  </thead>
  <% @wishlists.each do |wishlist| %>
    <tr>
      <td><img src="<%= wishlist.image_url %>" width="300"/></td>
      <td class="small"><%= wishlist.name %></td>
      <td><%= wishlist.item_count %></td>
      <td class="small">
        <% wishlist.by_color.map do |color, qty| %>
          <%= "#{color}: #{qty}"%><br />
        <% end %>
      </td>
      <td class="small">
        <% wishlist.by_type.map do |type, qty| %>
          <%= "#{type}: #{qty}"%><br />
        <% end %>
      </td>
      <td>
        <a class="icon-link" href="/wishlists/<%= wishlist.id %>">View</a>
        <a class="icon-link" target="_blank" href="<%= wishlist.url %>">BrickOwl</a>
      </td>
    </tr>
  <% end %>
</div>
