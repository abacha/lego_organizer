<h2>Item</h2>
<p><%= @item.name %></p>
<h3>Wishlists</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Type</td>
      <th>Id</td>
      <th>Name</td>
      <th>Qty</td>
  </thead>
  <tbody>
    <% @wishlists.each do |wishlist| %>
      <tr>
        <td><%= wishlist.type %></td>
        <td><%= wishlist.id %></td>
        <td><%= wishlist.name %></td>
        <td><%= wishlist.item(@item).qty %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Collections</h3>
<table class="table table-striped table-bordered">
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.name %></td>
        <td><%= collection.item(@item).qty %></td>
      </tr>
    <% end %>
</table>
